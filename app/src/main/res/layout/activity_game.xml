<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	tools:context="ru.wrom.darts.game.android.activity.GameActivity"
	android:background="#000000">

	<LinearLayout
		android:id="@+id/linearLayout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_alignParentStart="false"
		android:layout_alignParentTop="true"
		android:orientation="vertical"
		android:background="#b6a886a8">

		<TableLayout
			style="@style/AppTheme"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_centerHorizontal="true"
			android:layout_weight="1">

			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_column="3">

				<TextView
					android:layout_weight="1"
					android:text="WroM"
					android:textIsSelectable="false"
					android:textSize="35dp"
					android:textStyle="bold"/>

				<TextView
					android:id="@+id/attend_count"
					android:layout_weight="1"
					android:text="0"
					android:textSize="35dp"/>

				<TextView
					android:id="@+id/score"
					android:layout_weight="1"
					android:text="0"
					android:textSize="35dp"/>

			</TableRow>

		</TableLayout>

		<LinearLayout
			android:orientation="horizontal"

			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="1">

			<TextView
				android:id="@+id/attend_score"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="2"
				android:text="0"
				android:textSize="35dp"

				/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/imageButton"
				android:layout_weight="1"
				android:onClick="onClickNewGame"
				android:text="new game"/>

		</LinearLayout>

		<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_centerHorizontal="true"

			android:layout_weight="3"
			android:background="#000000"
			>

			<TableRow
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_column="3"
				android:layout_weight="1"
				android:baselineAligned="false"
				android:focusable="false">

				<Button
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:onClick="onClickNumber1"
					android:text="1"
					android:background="#ff7cc0ff"
					android:textSize="35dp"
					android:layout_marginBottom="1dp"
					android:layout_marginRight="1dp"/>

				<Button
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:onClick="onClickNumber2"
					android:text="2"
					android:background="#ff7cc0ff"
					android:textSize="35dp"
					android:layout_marginBottom="1dp"
					/>

				<Button
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:layout_marginBottom="1dp"
					android:onClick="onClickNumber3"
					android:text="3"
					android:background="#ff7cc0ff"
					android:layout_marginLeft="1dp"
					android:textSize="35dp"/>
			</TableRow>

			<TableRow
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_column="3"
				android:layout_weight="1">

				<Button
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:onClick="onClickNumber4"
					android:text="4"
					android:layout_marginRight="1dp"
					android:background="#ff7cc0ff"
					android:textSize="35dp"
					android:layout_marginBottom="1dp"/>

				<Button
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:onClick="onClickNumber5"
					android:text="5"
					android:background="#ff7cc0ff"
					android:layout_marginBottom="1dp"
					android:textSize="35dp"/>

				<Button
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:onClick="onClickNumber6"
					android:text="6"
					android:background="#ff7cc0ff"
					android:layout_marginBottom="1dp"
					android:layout_marginLeft="1dp"
					android:textSize="35dp"/>

			</TableRow>

			<TableRow
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_column="3"
				android:layout_weight="1">

				<Button
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:onClick="onClickNumber7"
					android:text="7"
					android:layout_marginRight="1dp"
					android:background="#ff7cc0ff"
					android:layout_marginBottom="1dp"
					android:textSize="35dp"/>

				<Button
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:onClick="onClickNumber8"
					android:text="8"
					android:background="#ff7cc0ff"
					android:layout_marginBottom="1dp"
					android:textSize="35dp"/>

				<Button
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:onClick="onClickNumber9"
					android:text="9"
					android:background="#ff7cc0ff"
					android:layout_marginBottom="1dp"
					android:layout_marginLeft="1dp"
					android:textSize="35dp"/>

			</TableRow>

			<TableRow

				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_column="3"
				android:layout_weight="1">

				<Button
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:onClick="onClickDelete"
					android:text="--"
					android:background="#ff7cc0ff"
					android:layout_marginRight="1dp"
					android:textSize="35dp"/>

				<Button
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:onClick="onClickNumber0"
					android:background="#ff7cc0ff"
					android:textSize="35dp"
					android:text="0"/>

				<Button
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:background="#ff7cc0ff"
					android:textSize="35dp"
					android:onClick="onClickEnter"
					android:layout_marginLeft="1dp"
					android:text="ok"/>

			</TableRow>

		</TableLayout>

	</LinearLayout>

</RelativeLayout>
