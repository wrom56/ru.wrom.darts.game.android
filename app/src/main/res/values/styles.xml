<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
	</style>

	<style name="MatchLayout">
		<item name="android:fontFamily">sans-serif-light</item>
		<item name="android:background">#3e4757</item>
		<item name="android:textColor">#ffffff</item>
	</style>

	<style name="ScoreTable" parent="MatchLayout">
		<item name="android:textSize">35dp</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">#9299a2</item>
	</style>

	<style name="ScoreTable.Player" parent="ScoreTable">
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_weight">4</item>
	</style>

	<style name="ScoreTable.SetWin" parent="ScoreTable">
		<item name="android:layout_weight">1</item>
	</style>

	<style name="ScoreTable.LegWin" parent="ScoreTable">
		<item name="android:layout_weight">1</item>
	</style>

	<style name="ScoreTable.LegScore" parent="ScoreTable">
		<item name="android:textSize">45dp</item>
		<item name="android:layout_weight">3</item>
	</style>

	<style name="ScoreTable.LastAttempt" parent="MatchLayout">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:textSize">10dp</item>
		<item name="android:gravity">right</item>
	</style>

	<style name="ScoreButton" parent="MatchLayout">
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textSize">35dp</item>
	</style>

	<style name="StatusBar" parent="MatchLayout">
		<item name="android:fontFamily">sans-serif-light</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:background">#FC646F80</item>
	</style>

	<style name="StatusBarParam" parent="StatusBar">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:textSize">15dp</item>
	</style>

	<style name="StatusBarParamName" parent="StatusBarParam">
		<item name="android:textColor">#9299a2</item>
	</style>

	<style name="StatusBarParamValue" parent="StatusBarParam">
		<item name="android:paddingRight">20dp</item>
		<item name="android:paddingLeft">5dp</item>
	</style>

	<style name="DartCountDialog" parent="AppTheme">
	</style>

	<style name="AttemptInfo">
		<item name="android:textColor">#9299a2</item>
	</style>

	<style name="AttemptInfo.Score" parent="AttemptInfo">
		<item name="android:textSize">70dp</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="AttemptInfo.Hint" parent="AttemptInfo">
		<item name="android:textSize">35dp</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="MainLayout">
		<item name="android:fontFamily">sans-serif-light</item>
		<item name="android:background">#3e4757</item>
		<item name="android:textColor">#ffffff</item>
	</style>

	<style name="MatchButton" parent="MatchLayout">
		<item name="android:layout_weight">1</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>

	<style name="GameSettings.ParamName" parent="MainLayout">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_weight">2</item>
		<item name="android:paddingBottom">20dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:textSize">20dp</item>
	</style>

	<style name="GameSettings.ParamValue" parent="MainLayout">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_weight">1</item>
	</style>

</resources>
